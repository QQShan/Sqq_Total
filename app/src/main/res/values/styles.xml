    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
<!--Light文字都是黑色的 dark文字都是白色的-->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="SqqTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:activityOpenEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@android:anim/slide_out_right</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>-->
       <!-- <item name="android:activityOpenEnterAnimation">@animator/in_anim</item>
        <item name="android:activityOpenExitAnimation">@animator/in_anim</item>
        <item name="android:activityCloseEnterAnimation">@animator/out_anim</item>
        <item name="android:activityCloseExitAnimation">@animator/out_anim</item>-->

    </style>

    <style name="Sqqactivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:activityOpenEnterAnimation">@animator/in_anim</item>
        <item name="android:activityOpenExitAnimation">@animator/in_anim</item>
        <item name="android:activityCloseEnterAnimation">@animator/out_anim</item>
        <item name="android:activityCloseExitAnimation">@animator/out_anim</item>
    </style>

    <style name="bottom_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:textColor">@color/colorYellow</item>-->
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="title_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="recyclerview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
        <item name="android:paddingTop">@dimen/title_height</item>
    </style>

    <style name="cardviewstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="tablayoutText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/title_textSize</item>
    </style>

    <style name="viewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/colorApGray</item>
    </style>

    <style name="infoItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="infoItemTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/info_item_select</item>
    </style>

    <style name="sqqDialogStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@animator/in</item>
        <item name="@android:windowExitAnimation">@animator/out</item>
    </style>
</resources>
